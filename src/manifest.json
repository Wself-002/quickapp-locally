  "display": {
    "titleBar": true,
    "titleBarText": "本地生活",
    "titleBarTextColor": "#ffffff",
    "titleBarBackgroundColor": "#15aabf",
    "backgroundColor": "#f1f3f5",
    "fullScreen": false,
    "menu": true,
    "pages": {
      "Home": {
        "menu": true
      },
      "Explore": {
        "titleBar": false
      },
      "About": {
        "titleBar": false,
        "titleBarText": "分类 « 本地生活",
        "titleBarTextColor": "#ffffff",
        "titleBarBackgroundColor": "#3a4861",
        "backgroundColor": "#ffffff",
